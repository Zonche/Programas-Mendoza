REM PASO: NUMERO DE LADOS PARA LAS BASES

PASO = 15

REM CALCULAMOS LAS CONSTANTES

RESTORE DATOS
PI = 3.141591 / 180
READ NDISCOS
TOTV = NDISCOS * PASO
DIM V(TOTV, 2)
PASO2 = 360 / PASO
READ CIERRA1
READ CIERRA2

REM CALCULAMOS LOS VERTICES DE LA FIGURA

FOR F = 0 TO NDISCOS - 1
     READ RADIO1
     READ RADIO2
     READ COX
     READ COY
     READ COZ

     FOR N = 0 TO 360 - PASO2 STEP PASO2
	  GRADO = N * PI
	  V(CUENTA, 0) = COX + RADIO1 * SIN(GRADO)
	  V(CUENTA, 1) = COY
	  V(CUENTA, 2) = COZ + RADIO2 * COS(GRADO)
	  CUENTA = CUENTA + 1
     NEXT N
NEXT F

TOTL = (NDISCOS - 1) * PASO
IF CIERRA1 = 1 THEN TOTL = TOTL + 1
IF CIERRA2 = 1 THEN TOTL = TOTL + 1
DIM L%(TOTL, PASO)

REM CERRAMOS LA CARA SUPERIOR SI ES NECESARIO

IF CIERRA1 = 1 THEN
     L%(0, 0) = PASO
     FOR N = 1 TO PASO
	  L%(0, N) = N - 1
     NEXT N
END IF

REM CERRAMOS LA CARA INFERIOR SI ES NECESARIO

IF CIERRA2 = 1 THEN
    
     REM SI CIERRA1 ES CERO, QUIERE DECIR QUE NO SE PINTA LA CARA SUPERIOR
     REM SI ES UNO, ENTONCES LA INFERIOR TIENE QUE SER LA CARA UNO, PUES
     REM LA CERO ES LA SUPERIOR

     L%(CIERRA1, 0) = PASO
     FOR N = 1 TO PASO
	  L%(CIERRA1, N) = N - 1 + (NDISCOS - 1) * PASO
     NEXT N
END IF

REM ASIGNAMOS LOS VERTICES A LOS LADOS

FOR F = 0 TO NDISCOS - 2
     FOR N = 0 TO PASO - 1
	  SIG = N + 1
	  IF SIG = PASO THEN
	       SIG = 0
	  END IF
	  CUENTA = N + CIERRA1 + CIERRA2 + F * PASO
	  L%(CUENTA, 0) = 4
	  L%(CUENTA, 1) = N + F * PASO
	  L%(CUENTA, 2) = N + PASO + F * PASO
	  L%(CUENTA, 3) = SIG + PASO + F * PASO
	  L%(CUENTA, 4) = SIG + F * PASO
     NEXT N
NEXT F

